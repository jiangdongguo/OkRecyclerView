<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OkRecyclerView">
        <!--header-->
        <attr name="headerLayoutWidth" format="dimension"/>
        <attr name="headerLayoutBgColor" format="color|reference"/>
        <attr name="headerProgressStyle" format="enum"/>
        <attr name="headerText" format="string|reference"/>
        <attr name="headerTextSize" format="dimension"/>
        <attr name="headerTextColor" format="color|reference"/>
        <attr name="pullToRefreshTip" format="string|reference"/>
        <attr name="releaseToRefreshTip" format="string|reference"/>
        <attr name="refreshingTip" format="string|reference"/>
        <!--footer-->
        <attr name="footerLayoutWidth" format="dimension"/>
        <attr name="footerLayoutBgColor" format="color|reference"/>
        <attr name="footerProgressStyle" format="enum">
            <enum name="defaultStyle" value="0"/>
            <enum name="qqzoneStyle" value="1"/>
            <enum name="ucBrowserStyle" value="2"/>
        </attr>
        <attr name="footerText" format="string|reference"/>
        <attr name="footerTextSize" format="dimension"/>
        <attr name="footerTextColor" format="color|reference"/>
        <attr name="loadPrepareTip" format="string|reference"/>
        <attr name="loadingTip" format="string|reference"/>
    </declare-styleable>
</resources>